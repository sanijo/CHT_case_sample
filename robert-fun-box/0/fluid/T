{
    fluid_interface
    {
        type            compressible::turbulentTemperatureCoupledBaffleMixed;
        Tnbr            T;
        kappaMethod     fluidThermo;
        value           uniform 315;
    }
    inlet
    {
        type            fixedValue;
        value           uniform 313;
    }
    "(outlet|walls|sides)"
    {
        type            zeroGradient;
    }
